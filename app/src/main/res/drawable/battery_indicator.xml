<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Battery outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" />
            <corners android:radius="2dp" />
            <size
                android:width="24dp"
                android:height="12dp" />
        </shape>
    </item>

    <!-- Battery right terminal -->
    <item android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" />
            <size
                android:width="2dp"
                android:height="6dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- Battery level - this will be updated programmatically -->
    <item
        android:id="@+id/battery_level"
        android:left="2dp"
        android:top="2dp"
        android:right="8dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#27AE60" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>