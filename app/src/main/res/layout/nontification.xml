<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/nontification_background">

    <ImageView
        android:id="@+id/iv_sos_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/sos"
        android:src="@drawable/alert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/iv_sos_icon"
        android:layout_toStartOf="@id/btn_respond"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_sos"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sos_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/sos_active"
            android:textColor="#212121"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/location_info"
            android:textColor="#757575"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_respond"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#F44336"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/respond"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>